{
    "name": "my-inventory-app",
    "private": true,
    "scripts": {
        "check:code-style": "npm run check:code-style:prettier && npm run check:code-style:lint",
        "check:code-style:lint": "eslint --ext .js,.ts,.tsx ./",
        "check:code-style:prettier": "prettier --check .",
        "check:type": "tsc --version && tsc --noEmit",
        "start": "meteor run",
        "test": "meteor test --once --driver-package meteortesting:mocha",
        "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
        "visualize": "meteor --production --extra-packages bundle-visualizer"
    },
    "dependencies": {
        "@babel/core": "^7.22.9",
        "@babel/runtime": "^7.22.6",
        "lodash": "^4.17.21",
        "meteor-node-stubs": "^1.2.5",
        "polished": "^4.2.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "styled-components": "^5.3.11"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.195",
        "@types/meteor": "^2.9.2",
        "@types/mocha": "^10.0.1",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@types/sinon": "^10.0.15",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "@xch/prettier-config": "^0.1.1",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard-with-typescript": "^37.0.0",
        "eslint-import-resolver-meteor": "^0.4.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-meteor": "^7.3.0",
        "eslint-plugin-n": "^15.3.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.33.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "2.7.1",
        "sinon": "^15.2.0",
        "typescript": "^5.1.6"
    },
    "engines": {
        "node": "^14.21.3",
        "npm": "^6.14"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "ignorePatterns": [
            "node_modules",
            "*.html"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "allowImportExportEverywhere": true,
            "ecmaVersion": "latest",
            "project": "./tsconfig.json",
            "sourceType": "module"
        },
        "extends": [
            "plugin:meteor/recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:react/recommended",
            "plugin:react-hooks/recommended",
            "standard-with-typescript",
            "prettier"
        ],
        "settings": {
            "import/resolver": "meteor",
            "react": {
                "version": "detect"
            }
        },
        "overrides": [],
        "plugins": [
            "meteor",
            "@typescript-eslint",
            "react"
        ],
        "root": true,
        "rules": {
            "@typescript-eslint/no-empty-interface": "warn",
            "@typescript-eslint/no-unused-vars": "warn",
            "import/extensions": "off",
            "import/no-absolute-path": "off",
            "import/order": [
                "error",
                {
                    "groups": [
                        "builtin",
                        "external",
                        "parent",
                        "sibling",
                        "index"
                    ],
                    "pathGroups": [
                        {
                            "pattern": "/**",
                            "group": "parent",
                            "position": "before"
                        }
                    ],
                    "alphabetize": {
                        "order": "asc",
                        "caseInsensitive": true
                    },
                    "newlines-between": "always"
                }
            ],
            "import/prefer-default-export": "off",
            "react/jsx-filename-extension": "off",
            "func-names": "off",
            "no-underscore-dangle": [
                "error",
                {
                    "allow": [
                        "_id",
                        "_ensureIndex"
                    ]
                }
            ],
            "object-shorthand": [
                "error",
                "always",
                {
                    "avoidQuotes": false
                }
            ],
            "spaced-comment": "off"
        }
    },
    "prettier": "@xch/prettier-config",
    "meteor": {
        "mainModule": {
            "client": "client/main.tsx",
            "server": "server/main.ts"
        }
    }
}
